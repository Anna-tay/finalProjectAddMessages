<!-- I am in here for the details page -->

<% if (title) { %>
    <h1><%- title %></h1>

    <form action="/account/update-account/<%- account_id%>" method="post" class="update-account">
        <div>
        <label for="account_firstname">Account first name: <input name="account_firstname" type="text"  <% if (account_firstname){ %>
          value="<%= account_firstname %>" <% }%>></label>
        </div>
        <br>
        <div>
          <label for="account_lastname">Account first name: <input name="account_lastname" type="text"  <% if (account_lastname){ %>
            value="<%= account_lastname %>" <% }%>></label>
        </div>
        <br>
        <div>
        <label for="account_email">Account first name: <input name="account_email" type="email" <% if (account_email){ %>
          value="<%= account_email %>" <% }%>></label>
        </div>
        <br>
        <input type="hidden" name="account_id"
            <% if(account_id) { %> value="<%= account_id %>"
        <% } %>>

        <button type="submit">Update Account</button>

      </form>
      <form action="/account/update-password/<%- account_id%>" method="post" class="update-password">
        <label for="accountPassword">Password:</label>
        <input type="password" name="account_password" id="accountPassword"
         pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        autocomplete="new-password">
        <br>
        <span class="password_instructions">*Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
        <br>

        <input type="hidden" name="account_id"
            <% if(account_id) { %> value="<%= account_id %>"
        <% } %>>
        <br>
        <button type="submit">Update Password</button>
      </form>

    <% } else {
      res.redirect('/')
    } %>

    <% messages() %>
